<!DOCTYPE html>
<html lang="en">
    <head>
        <title>User Posts</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="/controllers/my-posts.js"></script>
    </head>

    <body>
        <main>
            <header>
                <%- include('partials/navbar', {isAuth: isAuth}); %>
            </header>
            <h1>My Posts</h1>
            <ul id="postList">
                <%posts.map((post) => {%>
                    <li class="postListItem">
                        <div>
                            <label for="postTitle">Post Title</label>
                            <input type="text" class="form-control" id="title<%= post.id%>" value="<%= post.title%>" placeholder="<%= post.title%>" autocomplete='off'>
                        </div>
                        <div>
                            <label for="postTitle">Post Content</label>
                            <input type="text" class="form-control" id="content<%= post.id%>" value="<%= post.content%>" placeholder="<%= post.content%>" autocomplete='off'>
                        </div>
                        <button onclick='editPost("<%= post.id %>", "<%= post.creatorID %>")'>Submit Edits</button> 
                        <button onclick='deletePost("<%= post.id %>")'>Delete Post</button>
                    </li>
                <%})%>
            </ul> 
        </main>
    </body>
</html>